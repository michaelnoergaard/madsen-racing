          </div>
        </div>

        <!-- Driver portrait -->
        {portraitImageUrl ? (
          <div class="aspect-square bg-gradient-to-br from-mr-yellow/20 to-mr-purple/20 rounded-2xl overflow-hidden border border-mr-gray-700">
            <img src={portraitImageUrl} alt={`Portr칝t af ${driverInfo.name}`} class="w-full h-full object-cover" />
