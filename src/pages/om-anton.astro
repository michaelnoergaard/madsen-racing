      <div class="max-w-4xl mx-auto px-4">
        <RichTextRenderer content={aboutContent} className="prose prose-invert max-w-none" />
      </div>
    </section>
  ) : null}

  <!-- Dream Section -->
  <section class="section bg-mr-gray-900/50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="section-title mb-8">MIN <span class="text-mr-yellow">DR칒M</span></h2>

      <blockquote class="text-2xl md:text-3xl text-mr-gray-300 italic mb-8">
        "{driverInfo.dreamQuote}"
      </blockquote>

      <p class="text-mr-gray-400">
        {driverInfo.dreamDescription}
      </p>
    </div>
  </section>
</Layout>
