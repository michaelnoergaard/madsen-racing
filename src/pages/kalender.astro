---
import Layout from '../layouts/Layout.astro';
import RaceCard from '../components/RaceCard.astro';

// TODO: Replace with Contentful data
const races2026 = {
  forår: [
    { date: '15-16 Mar', name: 'DKM Runde 1', track: 'Roskilde Racing', highlight: true },
    { date: '5-6 Apr', name: 'DKM Runde 2', track: 'Vojens Speedway' },
    { date: '26-27 Apr', name: 'Nordic Championship', track: 'Asum Ring, Sverige' },
    { date: '17-18 Maj', name: 'DKM Runde 3', track: 'Nysum Karting' },
  ],
  sommer: [
    { date: '7-8 Jun', name: 'DKM Runde 4', track: 'Roskilde Racing' },
    { date: '21-22 Jun', name: 'Rotax Nordic Final', track: 'Kristianstad, Sverige' },
    { date: '12-13 Jul', name: 'DKM Runde 5', track: 'Vojens Speedway' },
    { date: '9-10 Aug', name: 'DKM Runde 6', track: 'Nysum Karting' },
  ],
  efterår: [
    { date: '30-31 Aug', name: 'Nordic Championship Final', track: 'Finland' },
    { date: '20-21 Sep', name: 'DKM Finale', track: 'Roskilde Racing' },
    { date: '11-12 Okt', name: 'International Trophy', track: 'Genk, Belgien' },
  ]
};
---

<Layout 
  title="Kalender 2026" 
  description="Se Anton Madsens løbskalender for 2026 sæsonen - DKM, Nordic Championship og internationale løb."
>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-mr-gradient-dark">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-black mb-4 font-display">
        KALENDER <span class="text-mr-yellow">2026</span>
      </h1>
      <p class="text-mr-gray-400 max-w-2xl mx-auto">
        Følg med i Madsen Racing's sæson. Her finder du alle løb, datoer og baner for 2026.
      </p>
    </div>
  </section>

  <!-- Spring -->
  <section class="section bg-mr-black">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        FORÅR
      </h2>
      <div class="space-y-4">
        {races2026.forår.map(race => (
          <RaceCard {...race} />
        ))}
      </div>
    </div>
  </section>

  <!-- Summer -->
  <section class="section bg-mr-gray-900/50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
        <span class="w-3 h-3 bg-mr-yellow rounded-full"></span>
        SOMMER
      </h2>
      <div class="space-y-4">
        {races2026.sommer.map(race => (
          <RaceCard {...race} />
        ))}
      </div>
    </div>
  </section>

  <!-- Autumn -->
  <section class="section bg-mr-black">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
        <span class="w-3 h-3 bg-orange-500 rounded-full"></span>
        EFTERÅR
      </h2>
      <div class="space-y-4">
        {races2026.efterår.map(race => (
          <RaceCard {...race} />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 bg-mr-purple/20 border-y border-mr-purple/30">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="text-xl font-bold mb-4">Følg med live på løbsdagene!</h3>
      <p class="text-mr-gray-400 mb-6">
        Vi deler opdateringer, live stories og resultater på Instagram og Facebook.
      </p>
      <div class="flex justify-center gap-4">
        <a href="https://instagram.com/madsenracing22" target="_blank" rel="noopener noreferrer" class="btn-primary">
          Instagram
        </a>
        <a href="https://facebook.com/madsenracing" target="_blank" rel="noopener noreferrer" class="btn-secondary">
          Facebook
        </a>
      </div>
    </div>
  </section>
</Layout>
