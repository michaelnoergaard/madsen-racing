---
import Layout from '../layouts/Layout.astro';
import Countdown from '../components/Countdown.astro';
import StatCard from '../components/StatCard.astro';
import InstagramFeed from '../components/InstagramFeed.astro';
import RaceCard from '../components/RaceCard.astro';
import SponsorLogo from '../components/SponsorLogo.astro';
import { getDriverStats, getUpcomingRaces, getSponsors, formatDate, getImageUrl, getPageContent } from '../lib/contentful';

// Fetch data from Contentful
let stats = [];
let upcomingRaces = [];
let sponsors = [];

try {
  // Get 2025 driver stats for homepage
  const driverStats = await getDriverStats('2025');
  if (driverStats) {
    const fields = driverStats.fields;
    stats = [
      { value: fields.totalRaces?.toString() || '0', label: 'Løb 2025' },
      { value: fields.wins?.toString() || '0', label: 'Sejre' },
      { value: fields.podiums?.toString() || '0', label: 'Podier' },
      { value: fields.fastestLaps?.toString() || '0', label: 'Hurtigste omgange' },
    ];
  }
} catch (error) {
  console.error('Error fetching driver stats:', error);
  // Fallback to empty stats
}

try {
  // Get upcoming races
  const races = await getUpcomingRaces(4);
  upcomingRaces = races.map(race => ({
    date: formatDate(race.fields.date),
    name: race.fields.title,
    track: race.fields.track,
    highlight: false, // Could be determined based on importance
  }));
} catch (error) {
  console.error('Error fetching upcoming races:', error);
  // Fallback to empty races
}

try {
  // Get active sponsors
  const sponsorEntries = await getSponsors();
  sponsors = sponsorEntries.map(sponsor => ({
    name: sponsor.fields.name,
    tier: sponsor.fields.tier,
    logo: sponsor.fields.logo ? getImageUrl(sponsor.fields.logo, 200) : undefined,
    website: sponsor.fields.website,
  }));
} catch (error) {
  console.error('Error fetching sponsors:', error);
  // Fallback to empty sponsors
}

// Fetch front page content from Contentful
let heroImage = '';
let heroHeadline = 'ANTON <span class="text-mr-yellow">MADSEN</span>';
let heroSubtitle = 'DANISH KARTING DRIVER • MADSEN RACING • NUMBER 22';

// Button data with fallbacks to current hardcoded values
let primaryButton = {
  text: 'FØLG PÅ INSTAGRAM',
  url: 'https://instagram.com/madsenracing22',
  openInNewTab: true
};

let secondaryButton = {
  text: 'BLIV SPONSOR',
  url: '/sponsorer',
  openInNewTab: false
};

try {
  const forsideContent = await getPageContent('forside');
  if (forsideContent) {
    heroImage = forsideContent.fields.heroImage ? getImageUrl(forsideContent.fields.heroImage, 1920) : '';
    heroHeadline = (forsideContent.fields.heroHeadline?.['da-DK'] || forsideContent.fields.heroHeadline?.['en-US']) || heroHeadline;
    heroSubtitle = (forsideContent.fields.heroSubtitle?.['da-DK'] || forsideContent.fields.heroSubtitle?.['en-US']) || heroSubtitle;

    // Handle button fields with page references and fallbacks
    if (forsideContent.fields.primaryButtonText) {
      primaryButton.text = forsideContent.fields.primaryButtonText['da-DK'] ||
                          forsideContent.fields.primaryButtonText['en-US'] ||
                          forsideContent.fields.primaryButtonText;
    }

    // Primary button URL - prioritize page reference over manual URL
    if (forsideContent.fields.primaryButtonPage) {
      // Use internal page reference
      const targetPage = forsideContent.fields.primaryButtonPage;
      const slug = targetPage.fields.slug['da-DK'] || targetPage.fields.slug['en-US'] || targetPage.fields.slug;
      primaryButton.url = `/${slug}`;
      primaryButton.openInNewTab = false; // Internal pages don't open in new tab
    } else if (forsideContent.fields.primaryButtonUrl) {
      // Use manual URL
      primaryButton.url = forsideContent.fields.primaryButtonUrl['da-DK'] ||
                        forsideContent.fields.primaryButtonUrl['en-US'] ||
                        forsideContent.fields.primaryButtonUrl;
      if (forsideContent.fields.primaryButtonNewTab !== undefined) {
        primaryButton.openInNewTab = forsideContent.fields.primaryButtonNewTab['da-DK'] ??
                                   forsideContent.fields.primaryButtonNewTab['en-US'] ??
                                   forsideContent.fields.primaryButtonNewTab;
      }
    }

    if (forsideContent.fields.secondaryButtonText) {
      secondaryButton.text = forsideContent.fields.secondaryButtonText['da-DK'] ||
                           forsideContent.fields.secondaryButtonText['en-US'] ||
                           forsideContent.fields.secondaryButtonText;
    }

    // Secondary button URL - prioritize page reference over manual URL
    if (forsideContent.fields.secondaryButtonPage) {
      // Use internal page reference
      const targetPage = forsideContent.fields.secondaryButtonPage;
      const slug = targetPage.fields.slug['da-DK'] || targetPage.fields.slug['en-US'] || targetPage.fields.slug;
      secondaryButton.url = `/${slug}`;
      secondaryButton.openInNewTab = false; // Internal pages don't open in new tab
    } else if (forsideContent.fields.secondaryButtonUrl) {
      // Use manual URL
      secondaryButton.url = forsideContent.fields.secondaryButtonUrl['da-DK'] ||
                          forsideContent.fields.secondaryButtonUrl['en-US'] ||
                          forsideContent.fields.secondaryButtonUrl;
      if (forsideContent.fields.secondaryButtonNewTab !== undefined) {
        secondaryButton.openInNewTab = forsideContent.fields.secondaryButtonNewTab['da-DK'] ??
                                     forsideContent.fields.secondaryButtonNewTab['en-US'] ??
                                     forsideContent.fields.secondaryButtonNewTab;
      }
    }
  }
} catch (error) {
  console.error('Error fetching forside content:', error);
  // Fallback to current hardcoded values
}
---

<Layout title="Hjem">
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Background with conditional image support -->
    {heroImage ? (
      <!-- Dynamic background image -->
      <div
        class="hero-background hero-background-loaded"
        style={`background-image: url('${heroImage}')`}
      ></div>
    ) : (
      <!-- Fallback gradient background -->
      <div class="absolute inset-0 bg-mr-gradient-dark"></div>
    )}

    <!-- Common overlay elements -->
    <div class="hero-background-overlay">
      <!-- Pattern overlay -->
      <div class="absolute inset-0 opacity-30" style="background-image: url('data:image/svg+xml;base64,')"></div>
      <!-- Racing stripes -->
      <div class="racing-stripe left-1/4"></div>
      <div class="absolute top-0 left-1/3 w-0.5 h-full bg-gradient-to-b from-transparent via-mr-purple/20 to-transparent"></div>
    </div>

    <!-- Hero Content -->
    <div class="hero-content px-4 animate-fade-in">
      <!-- Driver Number -->
      <div class="mb-4">
        <span class="inline-block text-8xl md:text-9xl font-black gradient-text leading-none font-display">
          22
        </span>
      </div>

      <!-- Dynamic Name -->
      <h1 class="text-4xl md:text-6xl font-black tracking-tight mb-2 font-display" set:html={heroHeadline}>
      </h1>

      <!-- Dynamic Tagline -->
      <p class="text-mr-gray-400 text-sm md:text-base tracking-widest mb-8">
        {heroSubtitle}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={primaryButton.url}
          target={primaryButton.openInNewTab ? '_blank' : '_self'}
          rel={primaryButton.openInNewTab ? 'noopener noreferrer' : ''}
          class="btn-primary"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          {primaryButton.text}
        </a>
        <a
          href={secondaryButton.url}
          target={secondaryButton.openInNewTab ? '_blank' : '_self'}
          rel={secondaryButton.openInNewTab ? 'noopener noreferrer' : ''}
          class="btn-secondary"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          {secondaryButton.text}
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-mr-gray-600 rounded-full flex justify-center pt-2">
        <div class="w-1 h-2 bg-mr-yellow rounded-full animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Next Race Countdown -->
  <Countdown />

  <!-- Stats Section -->
  <section class="section bg-mr-black">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="section-title">SÆSON <span class="text-mr-yellow">2025</span></h2>
        <p class="section-subtitle">Statistik og resultater</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {stats.map(stat => (
          <StatCard value={stat.value} label={stat.label} />
        ))}
      </div>
    </div>
  </section>

  <!-- Instagram Feed -->
  <InstagramFeed />

  <!-- Calendar Preview -->
  <section class="section bg-mr-black">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="section-title">KALENDER <span class="text-mr-yellow">2026</span></h2>
        <p class="section-subtitle">Kommende løb og events</p>
      </div>

      <div class="space-y-4">
        {upcomingRaces.map(race => (
          <RaceCard 
            date={race.date} 
            name={race.name} 
            track={race.track} 
            highlight={race.highlight} 
          />
        ))}
      </div>

      <div class="text-center mt-8">
        <a href="/kalender" class="btn-outline">
          SE HELE KALENDEREN →
        </a>
      </div>
    </div>
  </section>

  <!-- Sponsors -->
  <section class="section bg-mr-gray-900/50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="section-title">VORES <span class="text-mr-yellow">PARTNERE</span></h2>
        <p class="section-subtitle">Tak til alle der støtter Madsen Racing</p>
      </div>

      <div class="flex flex-wrap justify-center gap-6 mb-8">
        {sponsors.map(sponsor => (
          <SponsorLogo name={sponsor.name} tier={sponsor.tier} />
        ))}
      </div>

      <div class="text-center">
        <a href="/sponsorer" class="px-8 py-3 bg-mr-gradient text-mr-black font-bold rounded-lg hover:opacity-90 transition-all inline-block">
          BLIV SPONSOR →
        </a>
      </div>
    </div>
  </section>
</Layout>
