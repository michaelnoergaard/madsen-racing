---
// Header component with navigation
import { getSiteConfig } from '../lib/contentful';

// Fetch site config from Contentful
const siteConfig = await getSiteConfig();

// Fallback navigation items (used if Contentful fails or for nav item structure)
const defaultNavStructure = [
  { href: '/', key: 'home' },
  { href: '/om-anton', key: 'about' },
  { href: '/kalender', key: 'calendar' },
  { href: '/resultater', key: 'results' },
  { href: '/galleri', key: 'gallery' },
  { href: '/sponsorer', key: 'sponsors' },
];

// Get navigation labels from SiteConfig or use fallbacks
const navLabels = siteConfig?.fields.navigationItems || [
  'HJEM',
  'OM ANTON',
  'KALENDER 2026',
  'RESULTATER',
  'GALLERI',
  'SPONSORER',
];

// Combine structure with labels
const navItems = defaultNavStructure.map((item, index) => ({
  ...item,
  label: navLabels[index] || item.label,
}));

// Get social URLs from SiteConfig or use fallbacks
const socialInstagram = siteConfig?.fields.socialInstagram || 'https://instagram.com/madsenracing22';
const socialFacebook = siteConfig?.fields.socialFacebook || 'https://facebook.com/madsenracing';

// Get tagline from SiteConfig or use fallback
const tagline = siteConfig?.fields.tagline || 'DANISH KARTING';

const currentPath = Astro.url.pathname;
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 bg-mr-gradient rounded-lg flex items-center justify-center font-black text-mr-black text-sm group-hover:scale-105 transition-transform">
          MR
        </div>
        <div>
          <div class="font-bold text-sm tracking-wider">MADSEN RACING</div>
          <div class="text-[10px] text-mr-gray-400 tracking-widest">{tagline}</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              'nav-link',
              { 'nav-link-active': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Social Icons & Mobile Menu -->
      <div class="flex items-center gap-3">
        <a
          href={socialInstagram}
          target="_blank"
          rel="noopener noreferrer"
          class="text-mr-gray-400 hover:text-mr-yellow transition-colors"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        <a
          href={socialFacebook}
          target="_blank"
          rel="noopener noreferrer"
          class="text-mr-gray-400 hover:text-mr-yellow transition-colors"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-mr-gray-400 hover:text-white"
          aria-label="Ã…bn menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-mr-black/95 backdrop-blur-md border-t border-mr-gray-800">
    <nav class="px-4 py-4 space-y-2">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'block py-2 px-4 rounded-lg text-sm font-medium tracking-wider transition-colors',
            currentPath === item.href ? 'bg-mr-yellow/10 text-mr-yellow' : 'text-mr-gray-300 hover:bg-white/5'
          ]}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.getElementById('header');

  function updateHeader() {
    if (window.scrollY > 50) {
      header?.classList.add('bg-mr-black/95', 'backdrop-blur-md', 'shadow-lg');
    } else {
      header?.classList.remove('bg-mr-black/95', 'backdrop-blur-md', 'shadow-lg');
    }
  }

  window.addEventListener('scroll', updateHeader);
  updateHeader();

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
