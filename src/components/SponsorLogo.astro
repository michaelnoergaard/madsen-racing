---
import OptimizedImage from './media/OptimizedImage.astro';

interface Props {
  name: string;
  logo?: string;
  website?: string;
  width?: number;
  height?: number;
}

const { name, logo, website, width = 200, height = 100 } = Astro.props;
---

{website ? (
  <a
    href={website}
    target="_blank"
    rel="noopener noreferrer"
    class="sponsor-logo"
    title={name}
  >
    {logo ? (
      <OptimizedImage
        src={logo}
        alt={`${name} logo`}
        width={width}
        height={height}
        quality={90}
        format="webp"
        class="max-w-full max-h-full object-contain p-2"
        fit="contain"
      />
    ) : (
      <span class="text-mr-gray-500 text-xs text-center px-2">{name}</span>
    )}
  </a>
) : (
  <div class="sponsor-logo" title={name}>
    {logo ? (
      <OptimizedImage
        src={logo}
        alt={`${name} logo`}
        width={width}
        height={height}
        quality={90}
        format="webp"
        class="max-w-full max-h-full object-contain p-2"
        fit="contain"
      />
    ) : (
      <span class="text-mr-gray-500 text-xs text-center px-2">{name}</span>
    )}
  </div>
)}
